{
  "name": "rest-express",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:client": "vite build --config vite.config.mts",
    "build:server": "esbuild server/index.ts --platform=node --bundle --format=cjs --outfile=dist/index.cjs --external:lightningcss",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/index.cjs"
  },
  "dependencies": {
    "express": "^4.19.2",
    "body-parser": "^1.20.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "esbuild": "^0.21.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.19"
  }
}