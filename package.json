{
  "name": "rest-express",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:client": "vite build --config vite.config.mts",
    "build:server": "esbuild server/index.ts --platform=node --bundle --format=cjs --outfile=dist/index.cjs --external:lightningcss",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/index.cjs"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "wouter": "^3.0.0",
    "@tanstack/react-query": "^5.56.2",
    "lucide-react": "^0.400.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "esbuild": "^0.25.0",
    "typescript": "^5.5.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "vite": "^5.4.19",
    "tailwindcss": "^3.4.13",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20"
  }
}
